<?php


class Register implements JsonSerializable{

    private $name;
    private $age;
    private $email;

    function __construct($name, $age, $email){
        $this->name = $name;
        $this->age = $age;
        $this->email = $email;
    }

    public function getName(){
        return $this->name;
    }

    public function getAge(){
        return $this->age;
    }

    public function getEmail(){
        return $this->email;
    }


    public function jsonSerialize(){
        return ['name' => $this->name, 
            'age' => $this->age,
            'email' => $this->email];
    }
}